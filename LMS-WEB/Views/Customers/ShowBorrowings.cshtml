@model CustomerBorrowingsViewModel

<h2>Borrowings by @Model.CustomerName</h2>

<div class="tab-content mt-3">
    <div class="tab-pane fade show active">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Borrow Date</th>
                    <th>Due Date</th>
                    <th>Return Date</th>
                    <th>Status</th>
                    <th>Under Subscription</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var borrowing in Model.Borrowings)
                {
                    <tr>
                        <td>@borrowing.BorrowDate</td>
                        <td>@borrowing.DueDate</td>
                        <td>@borrowing.ReturnDate</td>
                        <td>@borrowing.Status</td>
                        <td>@(borrowing.Subscription == null ? "No" : "Yes")</td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Borrowings.Any())
        {
            <div class="alert alert-info">
                This customer has no borrowings.
            </div>
        }
    </div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to Customers</a>
</div>
